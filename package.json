{
  "name": "react-prebid-rubicon",
  "version": "1.1.7",
  "description": "Library for ad placements with Prebid header bidding in React applications using Rubicon demand manager hosted solution",
  "main": "index.js",
  "esnext": "index-esnext.js",
  "files": [
    "src/",
    "index.js",
    "index-esnext.js"
  ],
  "scripts": {
    "test": "jest",
    "build": "NODE_ENV=production webpack",
    "eslint": "eslint '**/*.js'",
    "prettier": "prettier '**/*.js' --write",
    "postBuild": "npm run prettier --write && npm run eslint --fix"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "git add",
        "jest --bail --findRelatedTests"
      ]
    },
    "ignore": [
      "index.js"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/src/utils/setupTests.js",
    "transformIgnorePatterns": [
      "node_modules/(?!(@mt-testutils)/)"
    ],
    "testEnvironmentOptions": {
      "url": "http://www.rubiconproject.com/"
    },
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rubicon-project/react-prebid-rubicon.git"
  },
  "author": "Antoine Jacquemin <ajacquemin@rubiconproject.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.3.0 <17.0.0"
  },
  "devDependencies": {
    "@mt-testutils/expect-snapshot": "^1.0.5",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.2.0",
    "chai-enzyme": "^1.0.0-beta.1",
    "check-prop-types": "^1.1.2",
    "coveralls": "^3.0.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "eslint": "^4.19.0",
    "eslint-config-motor-talk": "^5.0.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "lint-staged": "^7.3.0",
    "prettier": "^1.16.4",
    "prop-types": "^15.6.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-test-renderer": "^16.8.1",
    "regenerator-runtime": "^0.11.1",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.3.0",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  }
}
